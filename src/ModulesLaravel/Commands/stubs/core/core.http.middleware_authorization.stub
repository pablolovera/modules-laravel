<?php

namespace App\Core\Http\Middleware;

use Closure;
use Auth;

class Authorization
{
    /**
     * Handle an incoming request.
     *
     * @param  \Illuminate\Http\Request  $request
     * @param  \Closure  $next
     * @return mixed
     */
    public function handle($request, Closure $next, $permission)
    {
        if (Auth::user()->canDo($permission))
            return $next($request);

        return abort(403);
    }
}
